<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_6"
    android:elevation="@dimen/dp_6"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="@dimen/dp_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hotel_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_235"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/hotel_title"
            style="@style/cardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="Hotel Title" />

        <TextView
            android:id="@+id/hotel_info"
            style="@style/cardInfoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="Additional Information" />

        <TextView
            android:id="@+id/hotel_time"
            style="@style/cardInfoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_access_time_24"
            tool:text="Working Hour" />

        <TextView
            android:id="@+id/hotel_cost"
            style="@style/cardInfoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            tool:text="Hotel cost" />

        <TextView
            android:id="@+id/hotel_location"
            style="@style/cardInfoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            tool:text="Location " />

        <TextView
            android:id="@+id/hotel_webLink"
            style="@style/cardInfoStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:drawableStart="@drawable/website_link"
            tool:text="website" />

    </LinearLayout>

</androidx.cardview.widget.CardView>